<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="layoutGrid">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="FirstRow" Tag="UnDelete" Height="20pt"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"  Tag="UnDelete"/>
            <ColumnDefinition Width="95*"  Tag="UnDelete"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="checkBox" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Tag="UnDelete"/>
        <TextBox x:Name="textBox" Grid.Column="1" Grid.Row="0" LostFocus="BtnPost_Click" Tag="UnDelete"/>
    </Grid>
</Window>
